{% extends 'base.html.twig' %}
{% block title %}It works!
{% endblock %}
{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	<div class="example-wrapper">
		<h1>{{ page_title }}!</h1>
	</div>
	<p>{{action}}</p>
	<div>
		{% if book is not null %}
			<ul>
				<li>
					<strong>Isbn:</strong>
					{{ isbn }}
                </li>
				<li>
					<strong>Title:</strong>
					{{ title }}
                </li>
				<li>
					<strong>Author:</strong>
					{{ author }}
                </li>
                <li>
					<strong>Pages:</strong>
					{{ pages }}
                </li>
                <li>
					<strong>Publication Date:</strong>
					{{ pubdate }}
                </li>
                <li>
					<strong>Publisher:</strong>
					{{ publisher }}
                </li>
			</ul>
		{% else %}
			<h2>No Book found with this isbn : {{ isbn }} </h2>
		{% endif %}
	</div>
{% endblock %}
