{% extends 'base.html.twig' %}

{% block title %}ContactsApp{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>{{ controller_name }}!</h1>
        <div>
            {% if publisher_with_id is not null %}
                <ul>
                    <li><strong>Id: </strong>{{ publisher_id }}</li>
                    <li><strong>Name: </strong>{{ name }}</li>
                    <li><strong>Email: </strong>{{ email }}</li>
                </ul>
            {% else %}
                <h2>No contact found with id {{ publisher_id }}</h2>
            {% endif %}
        </div>
    </div>
{% endblock %}